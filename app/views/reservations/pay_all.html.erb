<script src="https://js.braintreegateway.com/web/dropin/1.3.1/js/dropin.min.js"></script>

<div id="dropin-container"></div>
<button id="submit-button">Request payment method</button>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
      $(document).ready(function() {
      var button = document.querySelector('#submit-button');

      braintree.dropin.create({
        authorization: '<%= @braintree_token %>',
        container: '#dropin-container'
      }, function (createErr, instance) {
        button.addEventListener('click', function () {
          instance.requestPaymentMethod(function (err, payload) {
          console.log(payload)
           $.ajax({
             url: "<%= receive_nonce_reservation_path(@reservation) %>",
             type: "POST",
             data: {payment_method_nonce:payload.nonce},
             success: function() {
              alert("Your payment has been saved. We will not charge you until everyone from your reservation confirms.");
              window.location.href = "<%= reservations_url %>";
             },
            });
          });
        });
      });
    });
  <% end %>
<% end %>


